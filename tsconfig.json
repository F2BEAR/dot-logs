{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"lib": ["ESNext"],
		"moduleResolution": "node",
		"types": ["node"],
		"declaration": true,
		"removeComments": true,
		"esModuleInterop": true,
		"strict": true,
		"rootDir": "./src",
		"outDir": "./lib",
		"skipLibCheck": true,
	},
	"include": ["./src/*.ts"],
	"exclude": ["./examples/*.ts", "./lib"]
}